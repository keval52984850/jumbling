<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relative1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tv1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:gravity="center_horizontal"
        android:text="Welcome!!"
        android:textSize="22dp"
        />

    <TextView
        android:id="@+id/tv2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv1"
        android:layout_marginTop="50dp"
        android:gravity="center_horizontal"
        android:text="Welcome!!"
        android:textSize="22dp"
        />

    <Button
        android:id="@+id/b1"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tv1"
        android:layout_marginTop="200dp"
        android:layout_toLeftOf="@id/b2"
        android:text="1" />

    <Button
        android:id="@+id/b2"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tv1"
        android:layout_marginTop="200dp"
        android:layout_toLeftOf="@id/b3"
        android:text="2" />


    <Button
        android:id="@+id/b3"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tv1"
        android:layout_marginTop="200dp"
        android:layout_toLeftOf="@id/b4"
        android:text="3" />


    <Button
        android:id="@+id/b4"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tv1"
        android:layout_marginTop="200dp"
        android:layout_centerHorizontal="true"
        android:text="4" />


    <Button
        android:id="@+id/b5"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/b1"
        android:layout_toLeftOf="@id/b6"
        android:text="5" />

    <Button
        android:id="@+id/b6"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/b7"
        android:layout_below="@id/b2"
        android:text="6" />


    <Button
        android:id="@+id/b7"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/b8"
        android:layout_below="@id/b3"
        android:text="7" />

    <Button
        android:id="@+id/b8"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/b4"
        android:layout_centerHorizontal="true"
        android:text="8" />

    <Button
        android:id="@+id/b9"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/b5"
        android:layout_toLeftOf="@id/b10"
        android:text="9" />

    <Button
        android:id="@+id/b10"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/b11"
        android:layout_below="@id/b6"
        android:text="10" />


    <Button
        android:id="@+id/b11"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/b12"
        android:layout_below="@id/b7"
        android:text="11" />


    <Button
        android:id="@+id/b12"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/b8"
        android:layout_centerHorizontal="true"
        android:text="12" />

    <Button
        android:id="@+id/b13"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/b9"
        android:layout_toLeftOf="@id/b14"
        android:text="13" />

    <Button
        android:id="@+id/b14"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/b15"
        android:layout_below="@id/b10"
        android:text="14" />


    <Button
        android:id="@+id/b15"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/b16"
        android:layout_below="@id/b11"
        android:text="15" />


    <Button
        android:id="@+id/b16"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/b12"
        android:layout_centerHorizontal="true"
        android:text="16" />

    <Button
        android:id="@+id/b17"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/b16"
        android:layout_centerHorizontal="true"
        android:text="17" />



    <Button
        android:id="@+id/bl1"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/tv1"
        android:layout_alignRight="@+id/tv1"
        android:layout_alignTop="@+id/b4"
        android:layout_marginLeft="46dp"
        android:layout_marginStart="46dp"
        android:layout_toRightOf="@+id/b4"
        android:text="LEVEL-1" />

    <Button
        android:id="@+id/bl2"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/tv1"
        android:layout_alignRight="@+id/tv1"
        android:layout_alignTop="@+id/b8"
        android:layout_marginLeft="46dp"
        android:layout_marginStart="46dp"
        android:layout_toRightOf="@+id/b8"
        android:text="LEVEL-2" />

    <Button
        android:id="@+id/bl3"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/tv1"
        android:layout_alignRight="@+id/tv1"
        android:layout_alignTop="@+id/b12"
        android:layout_marginLeft="46dp"
        android:layout_marginStart="46dp"
        android:layout_toRightOf="@+id/b12"
        android:text="LEVEL-3" />


</RelativeLayout>
